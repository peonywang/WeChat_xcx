.toplist-focus{
	position: relative;
	overflow: hidden;
}
.focus-bg{
    background-repeat: no-repeat;
    background-position: top center;
    background-size: cover;
}
.focus-bg:after{
	content: "";
    display: block;
    padding-top: 100%;
}
.focus-info{
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	padding: 50% 30rpx 50rpx;
	color: #fff;
	background: linear-gradient(to top, rgba(0,0,0,1) 0%, transparent 100%);
	display: flex;
	align-items: center;
	align-content: space-between;
}
.focus-text{
	flex: auto;
}
.focus-tit{
	display: block;
	font-size: 48rpx;
}
.focus-desc{
	display: block;
	font-size: 28rpx;
}
.focus-play{
	width: 84rpx;
	height: 84rpx;
	background: url(../../images/icon-play.png) no-repeat;
	background-size: contain;
}

.song-list{
	background: #000;
}
.song-item{
	display: flex;
	font-size: 36rpx;
	color: #fff;
	padding-left: 20rpx;
}
.song-number{
	flex: none;
	display: block;
	margin-right: 20rpx;
	padding-top: 10rpx;
	width: 60rpx;
	text-align: center;
}
.song-body{
	position: relative;
	flex: auto;
	padding: 10rpx 30rpx 10rpx 0;
	border-bottom: 1px solid rgba(255,255,255,.15);
	overflow: hidden;
}
.song-tit,
.song-desc{
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.song-tit{
	display: block;
}
.song-desc{
	display: block;
	color: rgba(255,255,255,.6);
	font-size: 28rpx;
}
.song-desc text:not(:first-of-type):not(:last-of-type):before{
  content: '/';
  margin: 0 8rpx;
}

.song-list.light .song-item{
	color: #000;
}
.song-list.light .song-desc{
	color: grey;
}
.song-list.light .song-body{
	border-bottom-color: rgba(0,0,0,.15);
}